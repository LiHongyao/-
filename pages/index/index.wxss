.container {
  margin: 0;
  padding: 0;
}

.banner {
  width: 750rpx;
  height: 400rpx;
  box-sizing: border-box;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background: #343434;
  color: #F5F5F5;
  letter-spacing: 4rpx;
}

.title {
  font-size: 28rpx;
}
.desc {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.contents {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20px;
 
}
.contents .item {
  width: 100%;
  height: 300rpx;
  background: pink;
  margin: 20rpx 0;
  border-radius: 12rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFFFFF;
}
